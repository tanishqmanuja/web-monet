{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"typeRoots": ["./types", "./node_modules/@types"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist"
	}
}
